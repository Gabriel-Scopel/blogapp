<h2>Lista de postagens</h2>
<hr />
<a href="/admin/postagens/add"><button class="btc btn-success">Nova Postagem</button></a>

{{#each postagens}}
  <div class="card">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>
      <small>Data: {{data}}</small>
      <small>Categoria: {{categoria.nome}}</small>
    </div>
  </div>

{{else}}
  <P> Nenhuma postagem registrada.</P>
{{/each}}