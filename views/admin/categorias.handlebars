<h2>Lista de Categorias</h2>
<hr />
<a href="/admin/categorias/add"><button class="btc btn-success">Nova Categoria</button></a>

{{#each categorias}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>Slug: {{slug}}</small><br />
      <small>Data de criação: {{date}}</small>
      <a href="/admin/categorias/edit/{{_id}}"><button
          class="btn btn-success"
        >Editar categoria</button></a>
      <form action="/admin/categorias/deletar/{{_id}}" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
            </form>
      </form>
    </div>
  </div>
{{else}}
  <h4 class="mt-2">Nenhuma categoria registrada.</h4>
{{/each}}